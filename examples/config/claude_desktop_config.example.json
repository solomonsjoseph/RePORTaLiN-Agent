{
  "mcpServers": {
    "reportalin-mcp": {
      "_comment": "RePORTaLiN MCP Server v2.0.0 - Production Configuration",
      "_doc": "See docs/MCP_SERVER_SETUP.md for detailed instructions",

      "_option1_uv_recommended": {
        "_comment": "RECOMMENDED: Use uv for automatic Python environment management",
        "command": "uv",
        "args": [
          "run",
          "--directory", "/absolute/path/to/RePORTaLiN-Agent",
          "python", "-m", "server"
        ],
        "env": {
          "REPORTALIN_PRIVACY_MODE": "strict"
        }
      },

      "_option2_docker": {
        "_comment": "Use Docker for maximum isolation and security",
        "command": "docker",
        "args": [
          "run",
          "-i",
          "--rm",
          "-v", "/absolute/path/to/RePORTaLiN-Agent/results:/app/results:ro",
          "reportalin-mcp:latest"
        ],
        "env": {
          "REPORTALIN_PRIVACY_MODE": "strict"
        }
      },

      "_option3_venv": {
        "_comment": "Direct venv Python - use absolute path to your virtual environment",
        "command": "/absolute/path/to/RePORTaLiN-Agent/.venv/bin/python",
        "args": [
          "-m", "server"
        ],
        "cwd": "/absolute/path/to/RePORTaLiN-Agent",
        "env": {
          "REPORTALIN_PRIVACY_MODE": "strict",
          "NO_COLOR": "1"
        }
      },

      "command": "uv",
      "args": [
        "run",
        "--directory", "/absolute/path/to/RePORTaLiN-Agent",
        "python", "-m", "server"
      ],
      "env": {
        "REPORTALIN_PRIVACY_MODE": "strict"
      }
    }
  }
}
