# =============================================================================
# RePORTaLiN MCP Server - Production Docker Image (UV-Based)
# =============================================================================
# Multi-stage build using uv package manager for optimal image size and
# reproducible builds.
#
# FEATURES:
#   ✓ Multi-stage build for minimal production image
#   ✓ uv package manager for fast, reproducible installs
#   ✓ Non-root user 'app' (UID 1000)
#   ✓ tini init system for proper signal handling
#   ✓ Health check endpoint integration
#   ✓ Environment-based configuration
#
# BUILD:
#   DOCKER_BUILDKIT=1 docker build -f Dockerfile.uv -t reportalin-mcp .
#
# RUN:
#   docker run -p 8000:8000 --env-file .env reportalin-mcp
#
# =============================================================================

# -----------------------------------------------------------------------------
# Stage 1: Builder - Install dependencies with uv
# -----------------------------------------------------------------------------
FROM python:3.11-slim AS builder

# Prevent Python from writing pyc files and buffering stdout/stderr
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

WORKDIR /app

# Install uv - fast Python package installer
# Using the official install script for reliability
RUN pip install --no-cache-dir uv

# Copy dependency files first for layer caching
# uv.lock ensures reproducible builds across environments
COPY pyproject.toml uv.lock* .python-version ./

# Create virtual environment and install dependencies
# --frozen ensures exact versions from lockfile are used
RUN uv venv .venv && \
    . .venv/bin/activate && \
    uv sync --frozen --no-dev 2>/dev/null || uv sync --no-dev

# -----------------------------------------------------------------------------
# Stage 2: Runtime - Minimal production image
# -----------------------------------------------------------------------------
FROM python:3.11-slim AS runtime

# OCI Labels for container metadata
LABEL org.opencontainers.image.title="RePORTaLiN MCP Server" \
      org.opencontainers.image.description="Production MCP Server for RePORTaLiN Clinical Data System" \
      org.opencontainers.image.version="2.0.0" \
      org.opencontainers.image.vendor="RePORTaLiN Team" \
      org.opencontainers.image.licenses="MIT" \
      org.opencontainers.image.source="https://github.com/your-org/RePORTaLiN-Agent"

# Install tini for proper init system (PID 1 signal handling)
# and curl for healthchecks
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        tini \
        curl && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

# Create non-root user for security
RUN groupadd --gid 1000 app && \
    useradd --uid 1000 --gid app --shell /usr/sbin/nologin --create-home app

WORKDIR /app

# Copy virtual environment from builder stage
COPY --from=builder --chown=app:app /app/.venv /app/.venv

# Add virtual environment to PATH
ENV PATH="/app/.venv/bin:$PATH" \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    # Default runtime configuration
    ENVIRONMENT=production \
    MCP_HOST=0.0.0.0 \
    MCP_PORT=8000 \
    LOG_LEVEL=INFO \
    LOG_FORMAT=json

# Copy application source code
COPY --chown=app:app server/ ./server/
COPY --chown=app:app client/ ./client/
COPY --chown=app:app shared/ ./shared/
COPY --chown=app:app scripts/ ./scripts/
COPY --chown=app:app config.py .
COPY --chown=app:app __version__.py .

# Create directories for runtime data (mounted as volumes)
RUN mkdir -p /app/results /app/data /app/encrypted_logs && \
    chown -R app:app /app

# Switch to non-root user
USER app

# Expose the MCP server port
EXPOSE 8000

# Health check - verify server is responding
# Uses /health endpoint which is public (no auth required)
HEALTHCHECK --interval=30s --timeout=10s --start-period=15s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Use tini as init to handle signals properly
ENTRYPOINT ["/usr/bin/tini", "--"]

# Start uvicorn server
# Using shell form to allow environment variable expansion
CMD ["uvicorn", "server.main:app", "--host", "0.0.0.0", "--port", "8000"]
