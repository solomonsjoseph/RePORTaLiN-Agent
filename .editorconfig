# EditorConfig for RePORTaLiN-Specialist
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Makefile (requires tabs)
[Makefile]
indent_style = tab
indent_size = 4

[*.mk]
indent_style = tab
indent_size = 4

# Shell scripts
[*.sh]
indent_size = 2

# Requirements files
[requirements*.txt]
indent_size = 4

# Config files
[*.{ini,cfg,toml}]
indent_size = 4

# Git config files
[.git*]
indent_size = 4
